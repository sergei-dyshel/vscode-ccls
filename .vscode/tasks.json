// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": ["$tsc-watch"],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build VSIX",
            "type": "shell",
            "command": "python build.py",
            "group": "build",
            "presentation": {
                    "echo": true,
                    "reveal": "silent",
                    "focus": false,
                    "panel": "shared",
                    "showReuseMessage": true
            },
            "problemMatcher": []
    },
    {
            "label": "install VSIX",
            "type": "shell",
            "command": "code --install-extension out/ccls.vsix",
            "group": "build",
            "dependsOn": [
                    "build VSIX"
            ],
            "presentation": {
                    "echo": true,
                    "reveal": "silent",
                    "focus": false,
                    "panel": "shared",
                    "showReuseMessage": true
            },
            "problemMatcher": []
    }

    ]
}
